<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <TextView
      android:id="@+id/id_tv"
      android:layout_width="@dimen/dp_0"
      android:layout_height="wrap_content"
      android:gravity="center"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@id/name_tv"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="id"
      />

  <TextView
      android:id="@+id/name_tv"
      android:layout_width="@dimen/dp_0"
      android:layout_height="wrap_content"
      android:gravity="center"
      app:layout_constraintLeft_toRightOf="@id/id_tv"
      app:layout_constraintRight_toLeftOf="@id/address_tv"
      app:layout_constraintTop_toTopOf="@id/id_tv"
      tools:text="name"
      />

  <TextView
      android:id="@+id/address_tv"
      android:layout_width="@dimen/dp_0"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:maxLines="1"
      android:scrollHorizontally="true"
      android:singleLine="true"
      app:layout_constraintLeft_toRightOf="@id/name_tv"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="@id/id_tv"
      tools:text="address"
      />

</androidx.constraintlayout.widget.ConstraintLayout>